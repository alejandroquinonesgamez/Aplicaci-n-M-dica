    except OSError:\
        pass\
\
    # Inicializar la base de datos con la app\
    db.init_app(app)\
\
    # Registrar las rutas (Blueprint)\
    from .routes import api\
    app.register_blueprint(api)\
\
    with app.app_context():\
        # Crea las tablas si no existen\
        db.create_all()\
\
    return app\
